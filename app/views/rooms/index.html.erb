<br>
<h1>Rooms</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr class="table-dark">
      <th>Room num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_num %></td>
        <td><%= link_to 'Show', room, class:"btn btn-outline-dark btn-sm" %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_room_path(room), class:"btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Room', new_room_path, class:"btn btn-secondary"  %>
<% end %>
