<div class="bg-light p-5 rounded-lg m-3">
  <h1 class="display-4">
    <%= @room.room_num %>
  </h1>
  <table class="table">
<tbody>
    <% @room.assignments.each do |assignment| %>
      <tr>

      <th>Guest</th>
      <th colspan="3"></th>
        <td><%= assignment.guest.first_name %>
          <%= assignment.guest.last_name%></td>

      </tr>
    <% end %>
  </tbody>

</table>

  <br>
  <%= link_to 'Edit', edit_room_path(@room), class:"btn btn-secondary" %> &nbsp;
  <%= link_to 'Back', rooms_path, class:"btn btn-dark" %>
</div>



