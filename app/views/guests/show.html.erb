<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @guest.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @guest.last_name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @guest.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @guest.email %>
</p>





<%= link_to 'Edit', edit_guest_path(@guest) %> |
<%= link_to 'Back', guests_path %>

<hr>

<h2>Rooms for <%= @guest.first_name %> </h2>
<table>
<tbody>
    <% @assignments.each do |assignment| %>
      <tr>

      <th>Room</th>
      <th colspan="3"></th>

        <td><%= assignment.room.room_num %></td>
        <td><%= link_to 'Show', guest_assignment_path(@guest.id, assignment.id) %></td>
        
      </tr>
    <% end %>
  </tbody>

</table>

<%= link_to "Assign a new room for this guest", edit_guest_path(@guest) %>
